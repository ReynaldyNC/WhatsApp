<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhatsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#128C7E</item>
        <item name="colorPrimaryVariant">#075E54</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">@color/white</item>
    </style>
    <style name="FontA">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="FontA.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="FontA.White">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="FontA.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="FontB">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#b3b3b3</item>
    </style>
</resources>